<div class="image-editor">
	<div class="image-container">
		<div class="image" style="background-image: url(<%= url %>)">
			<div class="crop-overlay"></div>
			<div class="crop-selection"></div>
		</div>
		<ul class="instructions">
			<li class="crop"><span class="icon"></span><span class="text">Drag to crop</span></li>
		</ul>
	</div>
	<div class="close-button"></div>
	<div class="y-scroll-bar">
		<div class="track">
			<div class="handle"></div>
		</div>
	</div>
	<div class="x-scroll-bar">
		<div class="track">
			<div class="handle"></div>
		</div>
	</div>
	<div class="action-bar">
		<button class="cancel" title="Delete">Delete</button>
		<button class="confirm"><span data-regular-text="Upload" data-cropped-text="Crop &amp; Upload">Upload</span></button>
	</div>
</div>
